journal = {Journal of Climate},
keywords = {Annular mode,Antarctic Oscillation,Antarctica,Climate variability,ENSO},
number = {18},
pages = {6253--6270},
title = {{Seasonal zonal asymmetries in the southern annular mode and their impact on regional temperature anomalies}},
volume = {25},
